doctype doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header 
            h1
                a(href="/")=pageTitle
            nav 
                ul 
                    li
                        a(href="/") Home 
                    if loggedIn 
                        li 
                            a(href="/logout") Logout 
                        li 
                            a(href="/my-profile") #{loggedInUser.name}Ïùò Profile
                    else
                        li
                            a(href="/login") Login
                        li
                            a(href="/join") Join
                    li 
                        a(href="/search") Search
                    block headerContent
        main
            block content
    include partials/footer